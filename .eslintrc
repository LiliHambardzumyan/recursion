{
  "parserOptions": {
  "ecmaVersion": 2017
},
  "env": {
    "es6": true
  },
  "rules": {
    "arrow-spacing": [
        "error",
        { "before": true, "after": true }
    ],
    "indent": [
        "error",
        2
    ],
    "linebreak-style": [
        "error",
        "unix"
    ],
    "lines-between-class-members": [
        "error",
        "always"
    ],
    "quotes": [
        "error",
        "single"
    ],
    "semi": [
        "error",
        "never"
    ],
    "no-console": [
        0
    ],
    "eqeqeq": [
        2,
        "smart"
    ],
    "no-var": [
        0
    ]
  }
}